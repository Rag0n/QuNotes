include_defs("//YOGA_DEFS")

cxx_binary(
    name = "benchmark",
    srcs = glob(["*.c"]),
    headers = subdir_glob([("", "*.h")]),
    header_namespace = "",
    compiler_flags = [
        "-fno-omit-frame-pointer",
        "-fexceptions",
        "-Wall",
        "-Werror",
        "-O3",
        "-std=c11",
    ],
    visibility = ["PUBLIC"],
    deps = [
        yoga_dep(":yoga"),
    ],
)
